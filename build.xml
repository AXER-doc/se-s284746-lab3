<?xml version="1.0"?>
<project name="Lab3" default="run">
	<property name="src.dir" location="src"/>
	<property name="src.main.dir" location="${src.dir}/main/java"/>
	<property name="src.test.dir" location="${src.dir}/test/java"/>
	<property name="build.dir" location="build"/>
	<property name="main.classes.dir" location="${build.dir}/main"/>
	<property name="test.classes.dir" location="${build.dir}/test"/>
	<property name="jar.dir" location="${build.dir}/jar"/>
	<property name="lib.dir" location="lib"/>
	<property name="output.dir" location="${build.dir}/test-report"/>
	<property name="jar.file-path" location="${jar.dir}/${ant.project.name}.jar"/>
	<property name="main-class" value="com.s284746.web.faces.Main"/>
	<path id="main.classpath">
		<fileset dir="${main.classes.dir}">
			<include name="**/*.class"/>
		</fileset>
	</path>
	<path id="test.classpath">
		<fileset dir="${test.classes.dir}">
			<include name="**/*.class"/>
		</fileset>
	</path>
	<path id="lib.classpath">
		<fileset dir="${lib.dir}">
			<include name="*.jar"/>
		</fileset>
	</path>
	<target name="clean">
	    <delete dir="${build.dir}"/>
	</target>
	<target name="init" depends="clean">
        <mkdir dir="${main.classes.dir}"/>
        <mkdir dir="${test.classes.dir}"/>
        <mkdir dir="${output.dir}"/>
    </target>
	<target name="compile" depends="init">
		<echo level="info">Build java classes</echo>
		<javac destdir="${main.classes.dir}" includeantruntime="false" target="11" source="11" verbose="true">
			<src path="${src.main.dir}"/>
			<classpath>
				<pathelement location="${main.classes.dir}"/>
				<path refid="lib.classpath"/>
			</classpath>
		</javac>
		<echo level="info">Build test classes</echo>
		<javac destdir="${test.classes.dir}" includeantruntime="false" target="11" source="11" verbose="true">
			<src path="${src.test.dir}"/>
			<classpath>
				<pathelement location="${main.classes.dir}"/>
				<path refid="lib.classpath"/>
			</classpath>
		</javac>
	</target>
	<target name="test" depends="compile">
		<junitlauncher printsummary="true" haltonfailure="true">
			<classpath>
				<path refid="lib.classpath"/>
				<pathelement location="${main.classes.dir}"/>
				<pathelement location="${test.classes.dir}"/>
			</classpath>
			<testclasses>
				<fileset dir="${test.classes.dir}">
					<include name="**/*.class"/>
				</fileset>
			</testclasses>
		</junitlauncher>
	</target>
	<target name="unpack" depends="test">
		<unjar dest="${main.classes.dir}">
			<path refid="lib.classpath"/>
		</unjar>
		<delete dir="${main.classes.dir}/META-INF"/>
		<delete file="${main.classes.dir}/module-info.class"/>
	</target>
	<target name="build" depends="unpack">
	    <mkdir dir="${jar.dir}"/>
	    <jar destfile="${jar.file-path}" basedir="${main.classes.dir}">
	        <manifest>
	            <attribute name="Main-Class" value="${main-class}"/>
	        </manifest>
	    </jar>
	</target>
	<target name="run" depends="build">
	    <java jar="${jar.file-path}" fork="true"/>
	</target>
</project>