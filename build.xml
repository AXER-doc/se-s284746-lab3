<?xml version="1.0"?>
<project name="Lab3" default="run">
	<property name="src.dir" location="src"/>
	<property name="build.dir" location="build"/>
	<property name="classes.dir" location="${build.dir}/classes"/>
	<property name="jar.dir" location="${build.dir}/jar"/>
	<property name="lib.dir" location="lib"/>
	<property name="jar.file-path" location="${jar.dir}/${ant.project.name}.jar"/>
	<property name="main-class" value="com.s284746.web.faces.Main"/>
	<target name="clean">
	    <delete dir="${build.dir}"/>
	</target>
    <target name="compile" depends="clean">
    	<mkdir dir="${classes.dir}"/>
    	<unjar dest="${classes.dir}">
			<path refid="lib.classpath"/>
		</unjar>
    	<delete dir="${classes.dir}/META-INF"/>
    	<delete file="${classes.dir}/module-info.class"/>
    	<javac destdir="${classes.dir}" includeantruntime="false">
            <src path="${src.dir}"/>
        	<classpath>
        		<path refid="main.classpath"/>
        	</classpath>
        </javac>
    </target>
	<target name="test" depends="compile">
		<junitlauncher>
			<classpath refid="main.classpath"/>
			<test name="com.s284746.web.faces.test.CalculationTest"/>
		</junitlauncher>
	</target>
	<target name="build" depends="test">
	    <mkdir dir="${jar.dir}"/>
	    <jar destfile="${jar.file-path}" basedir="${classes.dir}">
	        <manifest>
	            <attribute name="Main-Class" value="${main-class}"/>
	        </manifest>
	    </jar>
	</target>
	<target name="run" depends="build">
	    <java jar="${jar.file-path}" fork="true"/>
	</target>
	<path id="main.classpath">
		<fileset dir="${classes.dir}">
			<include name="*.class"/>
		</fileset>
	</path>
	<path id="lib.classpath">
		<fileset dir="${lib.dir}">
			<include name="*.jar"/>
		</fileset>
	</path>
</project>